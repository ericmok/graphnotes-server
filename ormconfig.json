{
   "type": "mongodb",
   "host": "localhost",
   "port": 27017,

   "synchronize": true,
   "logging": false,

   "useUnifiedTopology": true,

   "entities": [
      "src/entity/**/*.ts"
   ],
   "migrations": [
      "src/migration/**/*.ts"
   ],
   "subscribers": [
      "src/subscriber/**/*.ts"
   ],
   "cli": {
      "entitiesDir": "src/entity",
      "migrationsDir": "src/migration",
      "subscribersDir": "src/subscriber"
   }
}